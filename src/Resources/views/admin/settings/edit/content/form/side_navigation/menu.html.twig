<div class="col-12 col-lg-3">
    <div id="side-nav" class="sticky-md-top" style="top: 7.6rem;">
        <div class="list-group bg-white mb-5" role="tablist">
            {% for item in item.children %}
                <button
                    type="button"
                    class="list-group-item list-group-item-action{% if loop.first %} active{% endif %}"
                    data-bs-toggle="tab"
                    data-bs-target="#{{ item.name }}"
                    role="tab"
                >
                    {{ item.label|trans }}
                </button>
            {% endfor %}
        </div>
    </div>
</div>
