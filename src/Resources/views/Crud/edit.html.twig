{% extends '@SyliusAdmin/layout.html.twig' %}

{% import '@SyliusUi/Macro/headers.html.twig' as headers %}

{% block title %}{{ 'monsieurbiz.settings.ui.settings.title'|trans }} {{ parent() }}{% endblock %}

{% form_theme form '@MonsieurBizSyliusSettingsPlugin/Form/theme.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/monsieurbizsyliussettingsplugin/css/settings.css') }}">
{% endblock %}

{% block content %}

    <div class="ui stackable two column grid">
        <div class="column">
            <h1 class="ui header">
                <i class="circular {{ settings.icon }} icon"></i>
                <div class="content">
                    {{ 'monsieurbiz.settings.ui.settings_of.title'|trans({'%pluginName%': (settings.pluginName|trans)}) }}
                    <div class="sub header">{{ settings.description|trans }}</div>
                </div>
            </h1>
        </div>
        <div class="middle aligned column">
            <div class="ui right floated buttons">
                {{ sylius_template_event([settings.alias ~ '.settings.admin.update.actions', 'monsieurbiz.settings.admin.update.actions'], _context) }}
            </div>
        </div>
    </div>

    {{ sylius_template_event('monsieurbiz.settings.admin.update', _context) }}

{% endblock %}
